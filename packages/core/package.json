{
  "name": "@kuchita-el/pixel-calculator-core",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "files": [
    "./dist",
    "./package.json"
  ],
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "concurrently --names \"tsc,vite\" \"tsc --watch --project ./tsconfig.build.json\" \"vite build --watch\"",
    "build": "tsc --project ./tsconfig.build.json && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "vite": "^5.2.0",
    "vitest": "^1.4.0"
  }
}
